@using Shared.Dtos


@model LibroDto;

@{
    ViewBag.Title = "Borrar Libro";
}


<div class="container ">
    <div class="row justify-content-center">
        <div class="">
            <h3>Libro a Eliminar</h3>
        </div>
    </div>

    <div class="row justify-content-center ">
        <div class="col-6">
            @*            <form asp-action="UpdateLibro" method="post" class="container border border-info rounded p-2">
            *@
            <div class="container border border-info rounded p-2">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-inline border border-dark rounded mb-2">
                    <label asp-for=Name class="control-label col-6"></label>
                    <label asp-for=Name class="control-label col-6">@Model.Name</label>
                </div>

                <div class="form-inline border border-dark rounded mb-2">
                    <label asp-for=TipoLibro class="control-label col-6"></label>
                    <label asp-for=TipoLibro class="control-label col-6">@Model.TipoLibro</label>
                    @*<input asp-for="TipoLibro" class="form-control" />
                        <span asp-validation-for="@Model.TipoLibro" class="text-danger"></span>*@
                </div>

                <div class="form-inline border border-dark rounded mb-2 ">
                    <label asp-for="MedioAlmacenamiento" class="control-label col-6"></label>
                    <label asp-for="MedioAlmacenamiento" class="control-label col-6">@Model.MedioAlmacenamiento</label>
                    @*      <input asp-for="MedioAlmacenamiento" type="text" class="form-control" />
                        <span asp-validation-for="@Model.MedioAlmacenamiento" class="text-danger"></span>*@

                </div>
                <div class="form-inline border border-dark rounded mb-2">
                    <label asp-for=NumTomo class="control-label col-6"></label>
                    <label asp-for=NumTomo class="control-label col-6">@Model.NumTomo</label>
                    @* <input asp-for="NumTomo" class="form-control" />
                        <span asp-validation-for="@Model.NumTomo" class="text-danger"></span>*@
                </div>

                <div class="form-inline border border-dark rounded mb-2">
                    <label asp-for=CantFojas class="control-label col-6"></label>
                    <label asp-for=CantFojas class="control-label col-6">@Model.CantFojas</label>
                    @*<input asp-for="CantFojas" class="form-control" />
                        <span asp-validation-for="@Model.CantFojas" class="text-danger"></span>*@
                </div>

                <div class="form-inline border border-dark rounded mb-2">
                    <label asp-for="Autorizado" class="control-label col-6" for="decjurada"></label>
                    <input asp-for="Autorizado" class="form-check col-6" type="checkbox" disabled id="decjurada" />
                </div>

                <input asp-for="EntidadId" class="form-control" type="hidden" value="@Model.EntidadId" />

                <form asp-action="Delete" method="post">

                    <div class="form-group">
                        <input asp-for="Id" class="form-control" type="hidden" value="@Model.Id" />
                        
                    </div>

                    <div class="form-inline">
                        <label for="editar" class="control-label mr-5"> Confirme </label>
                        <input type="submit" value="Borrar libro" id="editar" class="btn btn-primary flex-column" />
                    </div>

                </form>
            </div>
            @*            </form>
            *@
        </div>
    </div>
    <div class="row justify-content-center">
        <a asp-area="" asp-controller="libro" asp-action="listadoLibros" asp-route-id="@Model.EntidadId">volver al listado de Libros</a>
    </div>
</div>

