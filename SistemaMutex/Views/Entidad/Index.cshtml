@using Shared.ViewModels

@model EntidadIndexVM;

@{
    ViewBag.Title = "Index";
}

@if (TempData["mensaje"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @TempData["mensaje"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3> Entidades </h3>
        </div>
    </div>

    <div class="row">
        <div class="col-md-10">

            <form asp-controller="entidad" asp-action="CreateEntidad" method="get" class="container">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="cuit" class="control-label" style="margin-inline:5px;" for="busqueda">CUIT de la entidad : </label>
                        <input asp-for="cuit" class="form-control" style="margin-inline:5px;" placeholder="30670279126" type="text" id="busqueda">
                    </div>
                    <div class="form-inline">
                        <input asp-for="padron" class="form-control mr-2" type="radio" id="Radio1" value="21">
                        <label asp-for="padron" class="control-label" for="Radio1">  Mutual  </label>
                    </div>
                    <div class="form-inline">
                        <input asp-for="padron" class="form-control mr-2" type="radio" id="inlineRadio2" value="11">
                        <label asp-for="padron" class="control-label" for="inlineRadio2">Coopertiva</label>
                    </div>

                    <div class="form-group">
                        <label  asp-for="repEntidad" class="control-label" for="representante" style="margin-inline:5px;">Representante de la entidad :  </label>
                        <input asp-for="repEntidad" class="form-control   " style="margin-inline:5px;" placeholder="nombre apellido" type="text" id="representante">
                    </div>
                    <div class="form-inline">
                        <label asp-for="decJurada" class="control-label " for="decjurada">Acepta declaracion jurada:  </label>
                        <input asp-for="decJurada" class="form-control m-3"   type="checkbox" id="decjurada"/>
                    </div>
                    <div class="form-group ">
                        <button class="btn btn-primary " value="submit">Cargar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


